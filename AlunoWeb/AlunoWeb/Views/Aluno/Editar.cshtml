@model AlunoWeb.Models.Aluno

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Aluno</h1>

<h4>Aluno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Matricula" />
             <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <input asp-for="Matricula" class="form-control"  disabled=/>
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlunoNome" class="control-label"></label>
                <input asp-for="AlunoNome" class="form-control" title="Preencha o campo Nome" required name=AlunoNome
                data-val-required="Preencha o Campo Nome" />          
                <span asp-validation-for="AlunoNome" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <h6> Sexo</h6>
                <select asp-for="Sexo" asp-items="Html.GetEnumSelectList<EnumeradorSexo>()"   ></select>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" name=DataNascimento data-val-required="Preencha o Campo Data Nascimento"/>
                <span asp-validation-for="DataNascimento" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Salvar &#10004;" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <p></p>
        <a class="btn btn-primary btn btn-secondary" asp-action="Index">&#9664Voltar Para Lista</a> 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
